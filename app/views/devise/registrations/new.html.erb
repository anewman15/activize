<div class="columns is-centered">
  <div class="column is-two-thirds-tablet is-half-desktop">
    <h2 class="title is-2">Sign Up</h2>
    <%= simple_form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
      <%= f.error_notification %>
      <div class="field">
        <div class="control">
          <%= f.input :name,
                      required: true,
                      input_html: { class: "input" },
                      wrapper: false,
                      label_html: { class: "label"} %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :email,
                      required: true,
                      input_html: { class: "input" },
                      wrapper: false,
                      label_html: { class: "label"} %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :password,
                      required: true,
                      hint: (minimum_chars_hint(@minimum_password_length)),
                      input_html: { class: "input" },
                      wrapper: false,
                      label_html: { class: "label"} %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :password_confirmation,
                      label: 'Confirm Password',
                      required: true,
                      input_html: { class: "input" },
                      wrapper: false,
                      label_html: { class: "label"} %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.button :submit, "Sign up", class: "button is-primary" %>
        </div>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
