<%= render 'activities/form' %>
<h2 class="title is-3">Your Ungrouped Activities</h2>
<% @ungrouped_activities.each do |activity| %>
  <p><%= "None" unless activity.group.present? %> </p>
  <p><%= activity.name %> </p>
  <p><%= "#{activity.amount} minutes" %> </p>
  <p><%= "#{activity.created_at}" %> </p>
  <hr>
<% end %>
