<%= simple_form_for(@activity, url: user_activities_path(current_user)) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  placeholder: '',
                  input_html: { autocomplete: "name", class: "input" },
                  wrapper: false,
                  label_html: { class: "label"} %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :group,
                  collection: @groups,
                  prompt: "Select Group",
                  input_html: { autocomplete: "current-password", class: "input" },
                  wrapper: false,
                  label_html: { class: "label"} %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.button :submit, "Log an Activity", class: "button is-primary" %>
    </div>
  </div>
<% end %>
<br>