<%= simple_form_for(@group, url: groups_path) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :name,
                  label: 'Group Name',
                  required: true,
                  autofocus: true,
                  placeholder: 'Enter a group name',
                  input_html: { autocomplete: "name", class: "input" },
                  wrapper: false,
                  label_html: { class: "label"} %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :icon,
                  as: :file,
                  label: "Upload Icon",
                  required: true,
                  input_html: { class: "input" },
                  wrapper: false,
                  label_html: { class: "label"} %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.button :submit, "Create New Group", class: "button is-primary" %>
    </div>
  </div>
<% end %>
<br>